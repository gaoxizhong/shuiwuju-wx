/* pages/user-water-info/index.wxss */


.user-water-info {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.info {
  flex: 1;
  overflow: hidden;
}

.info-label {
  padding: 20rpx 32rpx;
  border-bottom: 1px solid #ebeef5;
}

.info-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 20rpx 32rpx;
}

.info-item__label {
  font-size: 24rpx;
  width: auto;
  overflow: hidden;
  color: rgba(69, 90, 100, 0.6);
}

.info-item__info {
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.btn{
  display: flex;
  font-size: 28rpx;
}
.btn-item{
  flex: 0.5;
  text-align: center;
  border-top: 1px solid #ebeef5;
  padding: 20rpx;
}

.over {
  flex: 1;
}
.cover {
  width: 100%;
  height: 100%;
  opacity: 0.5;
  position: fixed;
  background-color: black;
  top: 0;
  left: 0;
  overflow: hidden;
  z-index: 9999;
}

.toast-box {
    height: auto;
    padding-bottom: 20rpx;
}
.toast-box {
    width: 75%;
    height: auto;
    padding: 20rpx;
    background-color: white;
    opacity: 1;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    z-index: 9999;
    border: 1rpx solid white;
    border-radius: 5rpx;
}
.van-button--block{
  margin-top: 30rpx;
}
.pass-title {
  width: 100%;
  padding-top: 20rpx;
  text-align: center;
  font-size: 30rpx;
  font-weight: 600;
  box-sizing: border-box;
}
.toast-box .van-field__control:empty+.van-field__control{
  padding-left: 20rpx;
  background: #f9f9f9;
  width: 100%;
  text-align: left;
}
.toast-box .van-cell{
  padding-left: 10rpx;
  padding-right: 10rpx;
}