/* pages/maintenance/add-account/index.wxss */
page {
  height: 100%;
}

.add-account {
  background-color: #fff;
}

.add-account-content{
  flex: 1;
  overflow: hidden;
}

.btn{
  display: flex;
  font-size: 28rpx;
}
.btn-item{
  flex: 1;
  text-align: center;
  padding: 20rpx;
}
.pop-box{
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: #33333340;
  z-index: 99;
}
.content-box{
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  width: 84%;
  height: auto;
  background: #fff;
  z-index: 100;
  border-radius: 4px;
}
.content-title{
  width: 100%;
  text-align: center;
  padding: 20rpx 30rpx;
  font-size: 30rpx;
  margin-top: 20rpx;
}
.content-btn-box{
  margin: 20rpx 0;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.content-btn-box>view.btn-items{
  flex: 1;
  padding: 0 10rpx;
}
.btn-items>view{
  padding: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #fff;
  border-radius: 4px;
}
.btn-items-1{
  background: #ff0000;
}
.btn-items-2{
  background: #1989fa;
}