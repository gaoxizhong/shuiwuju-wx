/* pages/maintenance/today-summary/index.wxss */
page {
  height: 100%;
}

.search-bar {
  display: flex;
  align-items: center;
  background-color: #fff;
}

.tody-summary {
  /* background-color: #fff; */
  display: flex;
  flex-direction: column;
}

.tody-summary-total {
  display: flex;
  flex-wrap: wrap;
  font-size: 24rpx;
  margin: 10rpx 0rpx;
}

.important-data {
  width: calc(50% - 5rpx);
  font-size: 28rpx;
  font-weight: 600;
  padding: 10rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.important-data-font {
  padding-top: 10rpx;
}

.general-data {
  margin-top: 10rpx;
  width: calc(50% - 5rpx);
  display: flex;
  padding: 10rpx 0rpx;
  background-color: #fff;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  border-radius: 10rpx;
}

.general-data-font {
  padding: 10rpx 0rpx;
}

.tody-summary-list {
  flex: 1;
  overflow: hidden;
  height: 100%;
}

.tody-summary-item {
  position: relative;
  padding: 20rpx;
  font-size: 28rpx;
}

.item__title {
  font-weight: 600;
  padding-bottom: 10rpx;
}

.item__water,
.item__money {
  padding-bottom: 6rpx;
}

.item__status {
  position: absolute;
  right: 20rpx;
  top: 80rpx;
  width: max-content;
  /* padding: 16rpx 24rpx; */
  /* letter-spacing: 8rpx; */
  font-size: 24rpx;
  font-weight: 600;
  /* border: 1px solid red; */
  /* transform: rotateZ(-30deg); */
}

.item__status.item--success {
  color: green;
}

.item__status.item--no {
  color: red;
}

.search-content {
  border-radius: 10rpx;
  flex: 1;
  overflow: hidden;
  background-color: #fff;
  flex-direction: column;
  display: flex;
  padding: 20rpx;
}

.no-data {
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.icon {
  padding-right: 20rpx;
}

.icon-btn {
  margin: 0rpx 20rpx;
}

.icon-btn .van-button--small {
  min-width: 80rpx;
}

.loading {
  text-align: center;
  padding: 10rpx 0rpx;
  font-size: 24rpx;
  color: #ccc;
  background-color: #fff;
}