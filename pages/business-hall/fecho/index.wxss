page{
  padding: 0 20rpx;
}
.view-box{
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.info-box{
  width: 100%;
  height: 100rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #666;
}
.info-box>view{
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
}
.info-box>view .text-1{
  font-size: 30rpx;
  color: #333;
}
.info-box>view .text-2{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer-box{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footer-box .input-box{
  flex: 1;
  padding-right: 30rpx;
}
.footer-box .van-field{
  padding: 10rpx !important;
}
.van-cell{
  padding: 10rpx 20rpx !important;
}
.van-cell__title{
  margin: 0 !important;
  min-width: 0 !important;
  width: auto !important;
  flex: none !important;
  padding: 0 20rpx;
}
van-button button{
  padding: 30rpx 50rpx !important;
  width: auto !important;
  min-width: 0 !important;
}
.van-field__control {
  font-size: 28rpx !important;
}