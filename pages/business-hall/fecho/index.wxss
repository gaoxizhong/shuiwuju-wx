page{
  padding: 0 20rpx;
}
.view-box{
  width: 100%;
  border-radius: 10rpx;
  background: #fff;
  padding: 20rpx;
  margin-top: 20rpx;
}
.info-box{
  width: 100%;
  height: 120rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  color: #666;
  padding-top: 20rpx;
}
.info-box>view{
  min-width: 170rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  padding: 0 10rpx;
}
.info-box>view .text-1{
  font-size: 30rpx;
  color: #333;
}
.info-box>view .text-2{
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.footer-box{
  margin-top: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.footer-box .input-box{
  flex: 1;
  padding-right: 30rpx;
}
.footer-box .van-field{
  padding: 10rpx !important;
}
.van-cell{
  padding: 10rpx 20rpx !important;
}
.van-cell__title{
  margin: 0 !important;
  min-width: 0 !important;
  width: auto !important;
  flex: none !important;
  padding: 0 20rpx;
}
van-button button{
  padding: 30rpx 50rpx !important;
  width: auto !important;
  min-width: 0 !important;
}
.van-field__control {
  font-size: 28rpx !important;
}
.jbsj-box{
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-top: 30rpx;
}
.title-box{
  padding-bottom: 16rpx;
  position: relative;
}
.title-box::after{
  content: '';
  width: 100%;
  height: 1px;
  transform: scaleY(0.5);
  position: absolute;
  left: 0;
  bottom: 0;
  background: #a8a8a8;
}
.title-box .text-1{
  padding-left: 10rpx;
}
.title-box .text-2{
  padding-left: 20rpx;
  font-weight: 600;
}
.KZ-size{
  font-size: 24rpx;
}