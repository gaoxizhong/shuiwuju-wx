/* pages/index/index.wxss */
page{
  height: calc(100% - 50px - env(safe-area-inset-bottom));
}
.index {
  /* background-color: #fff; */
  height: 100%;
  display: flex;
  flex-direction: column;
}

.image-logo {
  width: 100%;
  position: relative;
}
.fix-func {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  z-index: 99;
  position: absolute;
  bottom: -80rpx;
  background-color: #fff;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  display: flex;
}

.index-content {
  margin: 20rpx;
  margin-top: 80rpx;
  height: calc(100% - 40rpx);
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  flex: 1;
  overflow: hidden;
}
.scroll-content {
  height: 100%;
}

.box {
  background-color: #fff;
  padding: 10rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  
}

.box .title {
  padding: 16rpx;
  text-align: center;
  font-weight: 600;
  border-bottom: 1px solid #ebeef5;
}
.box .content {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.box .content .box-btn {
  padding: 20rpx 0px;
}

.box-btn {
  width: calc(100% / 3);
  overflow: hidden;
  /* width: 100%; */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.box-btn .icon {
  margin: 6rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 80rpx;
}
.icon image{
  width: 48rpx;
  height: 48rpx;
}

.notice .content {
  height: 300rpx;
}