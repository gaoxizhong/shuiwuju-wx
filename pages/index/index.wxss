/* pages/index/index.wxss */
page{
  height: 100%;
  width: 100%;
  background-color: #f2f2f2 !important;
  background-image: url('https://oss.qingshanpai.com/wx_shuiwuju/index-bg.png');
  background-repeat: no-repeat;  /* 关键属性 */
  background-position: 0 0;   /* 图片居中 */
  background-size: 100%;  /* 自适应容器 */
  z-index: -999;
}

.image-logo {
  width: 100%;
  padding: 0 30rpx 0 30rpx;
  margin-top: 110rpx;
  position: relative;
  height: 240rpx;
}
.image-logo>image{
  width: 490rpx;
  position: absolute;
  right: 50rpx;
  bottom: -10rpx;
  z-index: -1;
}
.fix-func {
  margin: 20rpx;
  width: calc(100% - 40rpx);
  z-index: 99;
  position: absolute;
  bottom: -80rpx;
  background-color: #fff;
  padding: 24rpx 30rpx;
  border-radius: 20rpx;
  display: flex;
}
.image-logo-title{
  width: 100%;
  height: 100%;
  padding: 54rpx 20rpx;
  box-sizing: border-box;
}
.logo-title{
  font-size: 62rpx;
  font-weight: bold;
  background: -webkit-linear-gradient(left,#0a2b5d,#27599d, #3f7fd2);
  -webkit-background-clip: text;
  color: transparent;
}
.index-content {
  margin: 0 20rpx;
  /* margin-top: 80rpx;
  height: calc(100% - 40rpx); */
  display: flex;
  flex-direction: column;
  border-radius: 10rpx;
  flex: 1;
}
.scroll-content {
  height: 100%;
}

.box {
  background-color: #fff;
  padding: 10rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  
}

.box .title {
  padding: 16rpx;
  text-align: left;
  font-weight: 600;
  display: flex;
  align-items: center;
  font-size: 36rpx;
}
.box .title>image{
  width: 48rpx;
}
.box .title .title-text{
  position: relative;
  margin-left: 20rpx;
}
.box .title .title-text>image{
  width: 102rpx;
  height: 36rpx;
  position: absolute;
  left: 0;
  bottom: 0;
  z-index: 0;
}
.box .content {
  padding: 20rpx;
  display: flex;
  flex-wrap: wrap;
}
.box .content .box-btn {
  padding: 20rpx 0px;
}

.box-btn {
  width: calc(100% / 3);
  overflow: hidden;
  /* width: 100%; */
  display: flex;
  flex-direction: column;
  /* justify-content: center; */
  align-items: center;
}
.box-btn .text{
  text-align: center;
}
.box-btn .icon {
  margin: 6rpx;
  width: 80rpx;
  height: 80rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.icon image{
  width: 80rpx;
  height: 80rpx;
}

.notice .content {
  height: 300rpx;
}