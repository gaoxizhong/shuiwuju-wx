<view class="index">
  <view class="search-bar">
      <van-search value="{{ select_value }}" readonly="{{type_seach == 'type'?true:false}}" placeholder="{{lang.searchBar}}" bindtap="{{type_seach == 'type'?'onShowPopup':''}}" bind:change="handleChangeInput"  bind:blur="handlesearchReading"   bind:search="handleSearchInfo" use-action-slot>
        <view class="icon"  slot="action">
          <van-button catchtap="handleSearchInfo" class="icon-btn" type="info" plain  size="small">{{lang.btnName}}</van-button>
          <!-- <van-icon name="ellipsis" bind:tap="onShowPopup" /> -->
        </view>
      </van-search>
    </view>
  <view class="search-content {{!list.length ? 'no-data' : ''}}">
    <van-empty wx:if="{{!list.length}}" image="search" description="{{lang.descriptionEmpty}}" />
    <scroll-view wx:else scroll-y="{{isScroll}}" scroll-with-animation class="wixi-list" lower-threshold="50" bindscrolltolower="addListData">
      <block wx:for="{{list}}" wx:key="index">
        <view class="wixi-item" data-index="{{index}}" bindtap="{{ userInfo != '{}'?'handleDetails':'' }}">
          <view class="wixi-item_title">
            <text>{{item.wm_no}}</text>
            <van-button type="info" size="small" block='true' data-item="{{item}}" bindtap="imprimirInfo" class="cadastrar-btn">{{ btnName.cadastrar }}</van-button>
          </view>
          <view class="wixi-item_i">
            <view class="wixi-item_i_label"> {{lang.wm_name}}： </view>
            <view class="wixi-item_i_content"> {{ item.wm_name }} </view>
          </view>

          <view class="wixi-item_i">
            <view class="wixi-item_i_label">{{item.area2}} {{item.wm_address}} {{item.area_code}} {{item.house_number}}</view>
            <!-- <view class="wixi-item_i_content">{{ item.}}</view> -->
          </view>
          <view class="wixi-item_i">
            <view class="wixi-item_i_label">
              {{lang.money}}：
            </view>
            <view class="wixi-item_i_content">
              {{item.user_bal}}（KZ）
            </view>
          </view>
          <view class="wixi-item_i">
            <view class="wixi-item_i_label">
              {{lang.createTime}}：
            </view>
            <view class="wixi-item_i_content">
              {{item.created_at}}
            </view>
          </view>
          <!-- <view class="wixi-item__status" style="color: {{item.status === 1 ? '#ee0a24' : '#07c160'}};">
            {{item.status_text}}
          </view> -->
          <view class="his-box">
            <van-button type="info" size="small" block='true' data-item="{{item}}" bindtap="goToDayin">{{ btnName.print }}</van-button>
            <van-button type="info" size="small" block='true' data-item="{{item}}" bindtap="goTojiaofei">{{ btnName.printOther1 }}</van-button>
          </view>

        </view>
      </block>
    </scroll-view>
    <!-- <view class="loading">{{loading}}</view> -->
  </view>

  <van-popup show="{{ show }}" safe-area-tab-bar position="bottom" bind:close="onClosePopup" round >
    <van-picker id="select" show-toolbar columns="{{ statusList }}" confirm-button-text="{{langDialog.confirmText}}" cancel-button-text="{{langDialog.cancelText}}" bind:cancel="onClosePopup" bind:confirm="handleSelectItem" />
  </van-popup>
</view>