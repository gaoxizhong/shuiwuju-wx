/* pages/user-water-info/index.wxss */


.user-water-info {
  background-color: #fff;
  display: flex;
  flex-direction: column;
}

.info {
  flex: 1;
  overflow: hidden;
}

.info-label {
  padding: 20rpx 32rpx;
  border-bottom: 1px solid #ebeef5;
}

.info-item {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  padding: 20rpx 32rpx;
}

.info-item__label {
  font-size: 24rpx;
  width: auto;
  overflow: hidden;
  color: rgba(69, 90, 100, 0.6);
}

.info-item__info {
  flex: 1;
  padding-left: 30rpx;
  display: flex;
  justify-content: flex-end;
}
.btn{
  display: flex;
  font-size: 28rpx;
}
.btn-item{
  flex: 1;
  text-align: center;
  border-top: 1px solid #ebeef5;
  padding: 20rpx;
}

.over {
  flex: 1;
}